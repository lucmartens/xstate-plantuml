{
  "key": "download",
  "initial": "idle",
  "states": {
    "idle": {
      "on": {
        "START": {
          "downloading": {
            "actions": "startDownload",
            "cond": "stableConnection"
          }
        }
      }
    },
    "downloading": {
      "on": {
        "PAUSE": "paused",
        "DONE": "finished"
      }
    },
    "paused": {
      "on": {
        "RESUME": { "downloading": { "actions": "resumeDownload" } },
        "CANCEL": "finished"
      }
    },
    "finished": {
      "onEntry": "cleanCache"
    }
  }
}
